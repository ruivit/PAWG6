<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/portals/admin-portal.css">
  <link rel="stylesheet" href="/stylesheets/listing/tableListingAdmin.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <title>Employee Management</title>
</head>
<body>
  <ul>
    <li><a class="importantbutton" href="/admin/">Back</a></li>
    <li><a href="/admin/employees/create">Create</a></li>
    <li><a href="#">Search</a></li>
    <li style="float:right">
      <a class="importantbutton"
      href="/logout_admin">Logout</a>
    </li>
  </ul>
  <br>
    <% if(employees.length>0) { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<employees.length;i++) { %>
            <tr>
              <td data-label="ID"> <%=i%> </td>
              <td data-label="username"> <%=employees[i].username%></a></td>
              <td data-label="email"> <%=employees[i].email%></a></td>
              <td data-label="name"> <%=employees[i].name%></a></td>   
              <td data-label="operations">
                <form action="/admin/employees/edit/<%=employees[i].id%>/edit" method="get">
                  <input type="image" class="material-icons edit" name="_method" value="edit">
                </form>
                <form action="/admin/employees/<%=employees[i].id%>/delete" method="post"
                  onclick="return confirm('Are you sure you want to delete this employee?')">
                  <input type="image" class="material-icons delete" name="_method" value="delete">
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    <% } else { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No Employees were found</th>
          </tr>
        </thead>
      </table>
    <% } %>
</body>
</html>