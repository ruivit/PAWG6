				<input name="email" class="input" type="text" placeholder=" " required
				minlength="2" maxlength="20" pattern="[a-zA-z0-9]+@+((.+)[a-zA-z0-9]){1,3}"/>
				<div class="cut cut-short"></div>
				<label for="email" class="placeholder">Email</label>
			</div>
			<div class="input-container ic2">
				<input name="name" class="input" type="text" placeholder=" " required
				minlength="2" maxlength="20" pattern="[a-zA-Z0-9]+\s[a-zA-Z0-9]+" />
				<div class="cut cut-long"></div>
				<label for="name" class="placeholder">Name (First/Last)</label>
			</div>
			<div class="input-container ic2">
				<input name="password" class="input" type="password" placeholder=" " id="password" required
				minlength="8" maxlength="20" pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,}$" />
				<div class="cut"></div>
				<label for="password" class="placeholder">Password</>
			</div>
			<span class="passwordpolicy">
Minimum 8 characters, at least 1 letter, 1 number and 1 special character
			</span>
			<button type="text" class="submit">Create</button>
		</div>
	</form>
	<% } %>
  </body>
</html>
