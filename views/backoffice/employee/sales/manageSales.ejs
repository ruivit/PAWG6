<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/portals/admin-portal.css">
  <link rel="stylesheet" href="/stylesheets/listing/tableListingBackoffice.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <title>Sales</title>
</head>
<body>
  <ul>
    <li><a class="importantbutton" href="/backoffice/employee/">Back</a></li>
    <li><a href="/backoffice/employee/sales/makeSale">Make a Sale</a></li>
    <li><a href="/backoffice/employee/sales/manageSales">Search</a></li>
    <li style="float:right">
      <a class="importantbutton"
      href="/backoffice/logout">Logout</a>
    </li>
  </ul>
  <br>
    <% if(sales.length>0) { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<sales.length;i++) { %>
            <tr>
              <td data-label="ID"> <%=i%> </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    <% } else { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No Sales were found</th>
          </tr>
        </thead>
      </table>
    <% } %>
</body>
</html>