<!DOCTYPE html>
<html>
  <head>
	<title>Update Client</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/stylesheets/update/updateBook.css">
	<script defer src="/javascripts/updateBook.js"></script>
	<link rel="stylesheet" href="/css/bootstrap.min.css">
  </head>
  <body>
	<% if(locals.book) { %>
	<div class="form">
		<form action="/backoffice/admin/book/update" method="post" enctype="multipart/form-data">
			<div class="subtitle">Updating the book <%= locals.book.title %></div>
			<div class="input-container ic1">
				<input name="title" class="input" type="text" placeholder=" " 
				value="<%= locals.book.title %>" required
				pattern="[a-zA-Z0-9\s]{1,50}" minlength="5" maxlength="50">
				<div class="cut"></div>
				<label for="title" class="placeholder">Title</label>
			</div>
			<div class="input-container ic2">
				<input name="author" class="input" type="text" placeholder=" "
				value="<%= locals.book.author %>" required
				pattern="[a-zA-Z0-9\s]{1,50}" minlength="5" maxlength="50">
				<div class="cut"></div>
				<label for="author" class="placeholder">Author</label>
			</div>
			<div class="input-container ic2">
				<input name="genre" class="input" type="text" placeholder=" "
				value="<%= locals.book.genre %>" required
				pattern="[a-zA-Z0-9]{1,50}" minlength="5" maxlength="50">
				<div class="cut"></div>
				<label for="genre" class="placeholder">Genre</label>
			</div>
			<div class="input-container ic2">
				<input name="editor" class="input" type="text" placeholder=" "
				value="<%= locals.book.editor %>" required
				pattern="[a-zA-Z0-9]{1,50}" minlength="5" maxlength="50">
				<div class="cut cut-long"></div>
				<label for="editor" class="placeholder">Editor</label>
			</div>
			<div class="input-container ic2">
				<input name="date" class="input" type="text" placeholder=" "
				value="<%= locals.book.dateAdded %>" required
				pattern="[0-9]{4}" minlength="4" maxlength="4">
				<div class="cut"></div>
				<label for="date" class="placeholder">Date Added</label>
			</div>
			<div class="input-container ic2">
				<input name="price" class="input" type="text" placeholder=" "
				value="<%= locals.book.price %>" required
				pattern="^\d+(.\d{1,2})?$" minlength="1" maxlength="10">
				<div class="cut"></div>
				<label for="price" class="placeholder">Price</label>
			</div>
			<div class="input-container ic2">
				<input name="stock" class="input" type="text" placeholder=" "
				value="<%= locals.book.stock %>" required
				pattern="[0-9]{1,4}" minlength="1" maxlength="4">
				<div class="cut"></div>
				<label for="stock" class="placeholder">Stock</label>
			</div>
			<div class="input-container ic2">
				<input name="isbn" class="input" type="text" placeholder=" "
				value="<%= locals.book.isbn %>" readonly
				pattern="[0-9]{13,13}" minlength="1" maxlength="13">
				<div class="cut"></div>
				<label for="isbn" class="placeholder">ISBN</label>
			</div>
			<button type="text" class="submit">Update</button>
		</form>
		<form action="/backoffice/employee/book" method="get">
			<button type="text" class="back">Back</button>
		</form>
	</div>
	<% } %>
  </body>
</html>
