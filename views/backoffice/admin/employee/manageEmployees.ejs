<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/portals/backoffice.css">
  <link rel="stylesheet" href="/stylesheets/listing/tableListingBackoffice.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <title>Employee Management</title>
</head>
<body>
  <ul>
    <li><a class="importantbutton" href="/backoffice/admin">Back</a></li>
    <li><a href="/backoffice/admin/employee/create">Create</a></li>
    <li><a>
      <form action="/backoffice/admin/employee/search" method="post">
        <input type="text" name="search" placeholder="Search">
        <input type="submit" value="Search">
      </form>
    </a></li>
    <li style="float:right">
      <a class="importantbutton"
      href="/backoffice/logout">Logout</a>
    </li>
  </ul>
  <br>
  <div class="container">
    <% if(employees.length>0) { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<employees.length;i++) { %>
            <tr>              
              <td data-label="username"> <%=employees[i].username%></a></td>
              <td data-label="email"> <%=employees[i].email%></a></td>
              <td data-label="name"> <%=employees[i].name%></a></td>
              <td data-label="category"> <%=employees[i].category%></a></td>
              <th scope="row">
                <p></p>
                <form action="/backoffice/admin/employee/update/<%=employees[i].id%>" method="get">
                  <input type="image" class="material-icons edit" name="_method" value="edit">
                </form>
                <p></p>
                <!-- Dont allow deletion of admin -->
                <% if(employees[i].category!="admin") { %>
                <form action="/backoffice/admin/employee/delete/<%=employees[i].id%>" method="post"
                  onclick="return confirm('Are you sure you want to delete this employee?')">
                  <input type="image" class="material-icons delete" name="_method" value="delete">
                </form>
                <% } %>
                <td data-label="passwordRecovery">
                  <a href="/backoffice/admin/employee/update/password/<%=employees[i].id%>">Reset password</a>
                </td>
              </th>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="pagination">
      <br>
      <table>
        <tr>
          <td>
            <% if(pages>1) { %>
              <a href="?page=<%= (currentPage-1) %>">
                <i class="material-icons">chevron_left</i>
              </a>
            <% } %>
          </td>
          <td>
            <% for(var i=1; i<pages; i++) { %>
              <a href="?page=<%= i %>" class="<% if(i==currentPage) { %>active<% } %>">
                <%= i %>
              </a>
            <% } %>
          </td>
          <td>
          <!-- check if its lastPage -->
          <% if(pages>1 && pages>currentPage) { %>
            <a href="?page=<%= (currentPage+1) %>">
              <i class="material-icons">chevron_right</i>
            </a>
          <% } %>
          </td>
        </tr>
      </table>
    </div>
    <% } else { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No Employees were found</th>
          </tr>
        </thead>
      </table>
    <% } %>
</body>
</html>