<!DOCTYPE html>
<html>
  <head>
	<title>Admin Update Client</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/stylesheets/update/updateBackofficeClient.css">
	<script defer src="/javascripts/update.js"></script>
	<link rel="stylesheet" href="/css/bootstrap.min.css">
  </head>
  <body>
	<% if(locals.client) { %>
	<div class="form">
		<form action="/backoffice/admin/client/update" method="post" enctype="multipart/form-data">
			<div class="subtitle">Updating the client <%=locals.client.name%></div>
			<div class="errormessage"><%= locals.message %></div>
			<div class="input-container ic1">
				<input name="username" class="input" type="text" placeholder=" "
				value="<%= locals.client.username %>" readonly>
				<div class="cut"></div>
				<label for="username" class="placeholder">Username</label>
			</div>
			<div class="input-container ic2">
				<input name="email" class="input" type="text" placeholder=" "
				value="<%= locals.client.email %>" required oninput="updatedValue()"
				minlength="2" maxlength="20" pattern="[a-zA-z0-9]+@+((.+)[a-zA-z0-9]){1,3}"/>
				<div class="cut"></div>
				<label for="email" class="placeholder">Email</label>
			</div>
			<div class="input-container ic2">
				<input name="name" class="input" type="text" placeholder=" "
				value="<%= locals.client.name %>" required oninput="updatedValue()"
				minlength="2" maxlength="20" pattern="[a-zA-Z0-9].+" />
				<div class="cut"></div>
				<label for="name" class="placeholder">Name</label>
			</div>
			<div class="input-container ic2">
				<input name="address" class="input" type="text" placeholder=" "
				value="<%= locals.client.address %>" required oninput="updatedValue()"
				minlength="2" maxlength="100" pattern="[a-zA-Z0-9].+" />
				<div class="cut"></div>
				<label for="address" class="placeholder">Address</label>
			</div>
			<div class="input-container ic2">
				<input name="phone" class="input" type="text" placeholder=" "
				value="<%= locals.client.phone %>" required oninput="updatedValue()"
				minlength="9" maxlength="9" pattern="[0-9]+" />
				<div class="cut cut-long"></div>
				<label for="phone" class="placeholder">Phone Number</label>
			</div>
			<div class="input-container ic2">
				<input name="points" class="input" type="text" placeholder=" "
				value="<%= locals.client.points %>" oninput="updatedValue()"
				minlength="0" maxlength="20" pattern="[0-9]+" />
				<div class="cut"></div>
				<label for="points" class="placeholder">Points</label>
			</div>
			<div class="input-container ic2">
				<input name="birthDate" class="input" type="date" placeholder=" "
				value="<%= locals.client.dateString %>" required oninput="updatedValue()"/>
				<div class="cut"></div>
				<label for="birthDate" class="placeholder">Birth Date</label>
			</div>
			<button type="text" class="submit">Submit changes</button>
		</form>
		<form action="/backoffice/admin/client/update/password/<%= locals.client.id %>" 
			method="get" enctype="multipart/form-data">
			<button type="text" class="updatePassword">Change Password</button>
		</form>
		<form action="/backoffice/admin/client" method="get">
			<button type="text" class="back">Back</button>
		</form>
	</div>
	<% } %>
  </body>
</html>
